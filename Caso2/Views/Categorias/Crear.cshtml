@model Caso2.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoría";
}

<h2>Crear nueva categoría</h2>

@if (TempData["Exito"] != null)
{
    <div class="alert alert-success">@TempData["Exito"]</div>
}

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Descripción</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Estado</label>
        <select asp-for="Estado" class="form-control">
            <option value="true">Activa</option>
            <option value="false">Inactiva</option>
        </select>
    </div>
    <div class="form-group">
        <label>Usuario que registra</label>
        <select asp-for="UsuarioRegistro" class="form-control" asp-items="@(new SelectList(ViewBag.Usuarios, "Id", "NombreUsuario"))"></select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar Categoría</button>
</form>
