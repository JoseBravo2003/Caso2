@model Caso2.Models.Evento

@{
    ViewData["Title"] = "Crear nuevo evento";
}

<h2>Crear nuevo evento</h2>

<!-- Mensajes de éxito o error -->
@if (TempData["Exito"] != null)
{
    <div class="alert alert-success">@TempData["Exito"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<!-- Formulario -->
<form asp-action="Crear" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Título</label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Descripción</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ubicación</label>
        <input asp-for="Ubicacion" class="form-control" />
        <span asp-validation-for="Ubicacion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Fecha</label>
        <input asp-for="Fecha" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Hora</label>
        <input asp-for="Hora" class="form-control" type="time" value="@DateTime.Now.ToString("HH\\:mm")" />
        <span asp-validation-for="Hora" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Duración (minutos)</label>
        <input asp-for="Duracion" class="form-control" />
        <span asp-validation-for="Duracion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Cupo máximo</label>
        <input asp-for="CupoMaximo" class="form-control" />
        <span asp-validation-for="CupoMaximo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Categoría</label>
        <select asp-for="IdCategoria" class="form-control" asp-items="@(new SelectList(ViewBag.Categorias, "Id", "Nombre"))"></select>
        <span asp-validation-for="IdCategoria" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Organizador (usuario)</label>
        <select asp-for="UsuarioRegistro" class="form-control" asp-items="@(new SelectList(ViewBag.Usuarios, "Id", "NombreUsuario"))"></select>
        <span asp-validation-for="UsuarioRegistro" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Crear evento</button>
</form>

<!-- Script para validaciones del lado cliente -->
<partial name="_ValidationScriptsPartial" />
